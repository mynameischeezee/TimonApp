<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Timon.Maui.Views.Authentication.LoginPage"
             Shell.NavBarIsVisible="false"
             Shell.FlyoutItemIsVisible="False"
             Shell.TabBarIsVisible="False">
    <VerticalStackLayout  VerticalOptions="CenterAndExpand" WidthRequest="300">
        <Label x:Name="WelcomeLbl" FontSize="24"  FontFamily="OpenSansItalic" HorizontalTextAlignment="Center" Text="Welcome! Explore wonderful world of money and budget tracking with:"></Label>
        <Image x:Name="LogoImg" Source="{AppThemeBinding Light=logo_light.svg, Dark=logo_dark.svg}" Margin="40" VerticalOptions="Center" HorizontalOptions="Center"></Image>
        <Button x:Name="BtnLogin" Text="Start your journey." Command="{Binding LoginCommand}"  HorizontalOptions="FillAndExpand"/>
    </VerticalStackLayout>
</ContentPage>